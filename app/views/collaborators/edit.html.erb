<%= link_to 'Voltar', collaborator_path(current_collaborator) %>

<% @collaborator.errors.full_messages.each do |message| %>
  <ul>
    <li><%= message %></li>
  </ul>
<% end %>

<%= form_with model: @collaborator, local: true do |f| %>
  <div>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>
  <div>
    <%= f.label :social_name %>
    <%= f.text_field :social_name %>
  </div>
  <div>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  <div>
    <%= f.label :birth_date %>
    <%= f.date_field :birth_date %>
  </div>
  <div>
    <%= f.label :position %>
    <%= f.text_field :position %>
  </div>
  <div>
    <%= f.label :sector %>
    <%= f.text_field :sector %>
  </div>
  <p><%= f.submit 'Enviar' %></p>
  <%#TODO Possibilidade: se deixar social_name em branco preenche com o full_name e vice versa? %>
<% end %>
